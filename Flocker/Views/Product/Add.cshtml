@model ProductFormModel


@{
    ViewData["Title"] = "View";
    Layout = "~/Views/_Layout.cshtml";
}



<section class="add-container">


    <div class="container">


        <h1 class="sell-label">Sell an Item</h1>


        <form id="product-submittionform" asp-action="add" method="post" enctype="multipart/form-data">


            <div class="image-container">

                <label asp-for="@Model.ImagesFiles "></label>
                <label class="custom-input-block">

                    <input class="input-img" asp-for="@Model.ImagesFiles " type="file" accept="image/*" multiple />

                </label>

                <label class="photo-count">You can only add <span class="image-total">8</span>  photos </label>

                <div class="preview-container">




                </div>

                <span class="img-size-validation">One or more of your image size was too large and has been removed max <span style="font-weight:700">8MB</span></span>

                <span asp-validation-for="@Model.ImagesFiles"></span>


            </div>


            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" />
                <span asp-validation-for="@Model.Name"></span>


                <label class="description-label" asp-for="@Model.Description"></label>

                <div class="description-container">
                    <textarea asp-for="@Model.Description" class="description-content"></textarea>
                    <h5 class="description-length">0/500</h5>


                </div>
                <span asp-validation-for="@Model.Description"></span>
            </div>



            <div class="form-group">
                <label asp-for="@Model.Categories"></label>
                <select asp-for="Category" asp-items="Model.Categories"></select>

                <span asp-validation-for="@Model.Categories"></span>

            </div>




            <div class="form-group">
                <label class="price-label" asp-for="@Model.Price"></label>
                <input class="price" asp-for="@Model.Price" type="number" min="0" step="any" />
                <span asp-validation-for="@Model.Price"></span>
            </div>











            <button class="post-button" type="submit">Submit</button>

        </form>




    </div>




</section>
<script src="~/script/ProductForm.js"></script>
<script src="~/script/AddProductAjax.js"></script>

