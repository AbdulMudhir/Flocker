
@{
    ViewData["Title"] = "WatchList";
    Layout = "~/Views/_ProfileLayout.cshtml";
}

@model WatchListViewModel


    <link href="~/content/WatchlistStylesheet.css" rel="stylesheet" />

<h1 class="profile-table-title">Watch List</h1>

<div class="table  ">
    <div class="table-title row align-center">
        <h4 class="userColumn">Seller</h4>
        <h4 class="priceColumn">Price</h4>
        <h4 class="productColumn">Product Name</h4>
        <h4 class="statusColumn">Status</h4>
    </div>

    @foreach (var item in Model.WatchLists)
    {

        <div class="cell row align-center">
            <a class="userColumn">@item.Product.Name</a>
            <a class="priceColumn hoverGrey">£@item.Product.Price</a>
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Product.ProductId" class="productColumn row  align-center">@item.Product.Name </a>

            <div class="statusColumn row justifiy-center align-center">


                @if (item.Product.Sold.IsSold)
                {

                    <a class="sold row justifiy-center align-center">Already Sold</a>
                    <a class="delete row justifiy-center align-center ">Delete</a>
                }
                else
                {

                    <a class="delete row justifiy-center align-center ">Delete</a>

                    <div class="confirmation-box">

                        <input type="hidden" name="OfferId" value="@item.WatchListId" />
                        <input type="hidden" name="ProductId" value="@item.Product.ProductId" />

                        <h1>Are you sure you want to delete</h1>
                        <a class="yes-button" style="cursor:pointer">Yes</a>
                        <a class="no-button" style="cursor:pointer">No</a>


                    </div>
                }


            </div>

        </div>

    }






</div>