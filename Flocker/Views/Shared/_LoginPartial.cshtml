@using Microsoft.AspNetCore.Identity
@using Flocker.Models

@inject SignInManager<CustomUserIdentity> SignInManager
@inject UserManager<CustomUserIdentity> UserManager

<ul class="LoginNavigation">
@if (SignInManager.IsSignedIn(User))
{       
        <a id="manage" class="username" asp-controller="profile" asp-action="index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
   
}
else
{
        <a class="register" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
  
        <a class="login" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</ul>
